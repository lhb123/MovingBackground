<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.byhook.mbg.MainActivity">

    <ImageView
        android:id="@+id/iv_login_switch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/px_120_w750"
        android:layout_marginLeft="@dimen/px_70_w750"
        android:layout_marginRight="@dimen/px_70_w750"
        android:layout_marginTop="@dimen/px_36_w750"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_login_wechat"
            android:layout_width="@dimen/px_90_w750"
            android:layout_height="@dimen/px_90_w750"
            android:src="@drawable/selector_login_wechat" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_login_weibo"
            android:layout_width="@dimen/px_90_w750"
            android:layout_height="@dimen/px_90_w750"
            android:src="@drawable/selector_login_weibo" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_login_qq"
            android:layout_width="@dimen/px_90_w750"
            android:layout_height="@dimen/px_90_w750"
            android:src="@drawable/selector_login_qq" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_login_phone"
            android:layout_width="@dimen/px_90_w750"
            android:layout_height="@dimen/px_90_w750"
            android:src="@drawable/selector_login_phone" />

    </LinearLayout>

</FrameLayout>
